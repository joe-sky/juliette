{
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build juliette && ng build juliette-ng",
    "build:prod": "ng build juliette --prod && ng build juliette-ng --prod && npm run copy-readme",
    "test": "ng test",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "eslint": "eslint . --ext .js,.ts --ignore-path .lintignore",
    "eslint:fix": "eslint . --ext .js,.ts --ignore-path .lintignore --fix",
    "prettier": "prettier --check . --ignore-path .lintignore",
    "prettier:fix": "prettier --write . --ignore-path .lintignore",
    "update-version:patch": "node ./scripts/update-version.js VERSION_TYPE=patch",
    "update-version:minor": "node ./scripts/update-version.js VERSION_TYPE=minor",
    "update-version:major": "node ./scripts/update-version.js VERSION_TYPE=major",
    "copy-readme": "cp -r ./README.md ./dist/juliette && cp -r ./README.md ./dist/juliette-ng",
    "publish-libs": "node ./scripts/publish.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git add . && npm run lint:fix && npm run build:prod"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.4",
    "@angular/common": "~10.0.4",
    "@angular/compiler": "~10.0.4",
    "@angular/core": "~10.0.4",
    "@angular/forms": "~10.0.4",
    "@angular/platform-browser": "~10.0.4",
    "@angular/platform-browser-dynamic": "~10.0.4",
    "@angular/router": "~10.0.4",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.4",
    "@angular-devkit/build-ng-packagr": "~0.1000.4",
    "@angular/cli": "~10.0.3",
    "@angular/compiler-cli": "~10.0.4",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "~3.7.0",
    "@typescript-eslint/parser": "~3.7.0",
    "eslint": "~7.5.0",
    "eslint-config-prettier": "~6.11.0",
    "husky": "~4.2.5",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^10.0.0",
    "prettier": "~2.0.5",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  }
}
